# Environment Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/soulaimane-portfolio
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/soulaimane-portfolio?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password
NOTIFICATION_EMAIL=soulaimane@example.com

# Frontend URLs for CORS
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PROD=https://your-portfolio.vercel.app

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CONTACT_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_MAX=5

# Database Options
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# Email Templates
EMAIL_FROM_NAME=Soulaimane Portfolio
EMAIL_REPLY_TO=noreply@soulaimane.dev

# File Upload (if you plan to add file upload functionality)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@soulaimane.dev
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Social Media Links (for auto-population)
GITHUB_URL=https://github.com/soulaimane
LINKEDIN_URL=https://linkedin.com/in/soulaimane
TWITTER_URL=https://twitter.com/soulaimane

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30